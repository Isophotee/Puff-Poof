<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F2E6">

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="Back"
        android:src="@drawable/back"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="42dp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:fontFamily="@font/poppins"
        android:text="PuffnPoof"
        android:textColor="#00AEEF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        tools:layout_editor_absoluteX="134dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/otp_form"
        android:layout_width="270dp"
        android:layout_height="101dp"
        android:background="@drawable/rounded_square_user"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.407">

        <EditText
            android:id="@+id/otp_input"
            android:layout_width="221dp"
            android:layout_height="49dp"
            android:background="@drawable/edittext_rounded"
            android:fontFamily="@font/poppins"
            android:hint="Enter OTP"
            android:inputType="number"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.507" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/otp_instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="Already have an account? Log in here!"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="604dp" />

    <Button
        android:id="@+id/verify_button"
        android:layout_width="147dp"
        android:layout_height="56dp"
        android:layout_marginTop="51dp"
        android:layout_marginBottom="64dp"
        android:backgroundTint="#00AEEF"
        android:fontFamily="@font/poppins"
        android:padding="12dp"
        android:text="Verify"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/otp_instruction"
        app:layout_constraintTop_toBottomOf="@+id/otp_form"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="129dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="323dp"
        android:layout_height="49dp"
        android:layout_marginBottom="44dp"
        android:fontFamily="@font/poppins"
        android:text="We have sent you a one time password, please check your messages "
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/otp_form"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
